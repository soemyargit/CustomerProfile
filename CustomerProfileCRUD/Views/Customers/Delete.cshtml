@model CustomerAndAddresses;
@{
}
<form method="post" enctype="multipart/form-data">
    <div class="row">

        <div class="col-md-12 rounded border p-3">
            <h3 class="text-center mb-5"> Customer Delete</h3>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">
                    Name
                </label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">
                    Photo
                </label>
                <div class="col-sm-8">
                    <img src=@Url.Content( "~/CustomerPhotos/" + @Model.Photo ) width="100" height="100" />
                    @* <img src="~/CustomerPhotos/Photo" width="100" height="100" /> *@

                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">
                    Phone
                </label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Phone" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">
                    Email
                </label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Email" />

                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">
                    Fax
                </label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Fax" />

                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">
                    Website Address
                </label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Internet" />

                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">
                    Office Address
                </label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="OfficeAddress" />

                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">
                    Home Address
                </label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="HomeAddress" />

                </div>
            </div>
    </div>

    <div class="row" style="align-content:center">
        <div class="col-md-12 rounded border p-3">

                <button type="submit" class="btn btn-danger">Delete</button>

            <a class="btn btn-outline-primary" asp-controller="Customers" asp-action="Index" role="button">
                Cancel
            </a>

        </div>
    </div>


</form>


